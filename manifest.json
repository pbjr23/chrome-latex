{
  "name": "ChromeTeX",
  "version": "0.1.0",
  "background": {
    "scripts": ["js/background.js"]
  },
  "icons": { "128": "img/icon128.png" },
  "description": "View LaTeX files (.tex) directly in Chrome!",
  "manifest_version": 2,
  "permissions": ["webRequest", "webRequestBlocking", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
        "matches": [
            "*://*/*.tex"
        ],
        "js": [
            "js/content.js"
        ],
        "run_at": "document_end"
    }
    ]
}
